<launch>
  <arg name="rviz" default="true"/>

  <include file="$(find optoforce)/launch/optoforce.launch">
  <arg name="port" value="/dev/optoforce/optoforce_ISE0A095"/>
  <arg name="type" value="s-ch/3-axis"/>
  <arg name="starting_index" value="0"/>
  <arg name="scaling_file" value="$(find sr_optoforce_config)/config/single_channel_3_axis_generic_scale.yaml" />
  </include>

  <include file="$(find optoforce)/launch/optoforce.launch">
  <arg name="port" value="/dev/optoforce/optoforce_SHW0A003"/>
  <arg name="type" value="m-ch/3-axis"/>
  <arg name="starting_index" value="1"/>
  <arg name="scaling_file" value="$(find sr_optoforce_config)/config/multi_channel_3_axis_generic_scale.yaml" />
  </include>

  <include if="$(arg rviz)" file="$(find sr_optoforce_config)/launch/rviz.launch"/>

  <!-- Static transforms form Optoforce sensor to finger tip -->
  <node name="optoforce_0_broadcaster" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 1.57 rh_thtip optoforce_0 100" />
  <node name="optoforce_1_broadcaster" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 1.57 rh_fftip optoforce_1 100" />
  <node name="optoforce_2_broadcaster" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 1.57 rh_mftip optoforce_2 100" />
  <node name="optoforce_3_broadcaster" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 1.57 rh_rftip optoforce_3 100" />
  <node name="optoforce_4_broadcaster" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 1.57 rh_lftip optoforce_4 100" />
</launch>
